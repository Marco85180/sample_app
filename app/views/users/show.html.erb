<% provide(:title, @user.name) %>
<div class="row">
  <div class="col-md-4">
    <section id="space">
      <h3>
        <%= gravatar_for @user, { size: 70 } %>
        <%= @user.name %>
      </h3>
    </section>
    <section>
      <%= render "shared/stats" %>
    </section>
  </div>
  <div class="col-md-8">
    <%= render "follow_form" if signed_in? %>
    <% if @user.microposts.any? %>
      <h3> Microposts (<%= @user.microposts.count %>) </h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>